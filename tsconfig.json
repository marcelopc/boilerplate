{
  "compilerOptions": {
    "target": "es2021",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es6"],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@app/*": ["./src/app/*"],
      "@core/*": ["./src/core/*"],
    },
    "rootDirs": [
      "./src",
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*.ts",
    "vite.config.ts"
    ],
  "exclude": [
    "./node_modules/*",
    "dist",
  ]
}